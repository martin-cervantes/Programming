<Window x:Class="Wpf_Text_Controls_Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Text_Controls_Demo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="12">
        <TextBlock Width="120" 
                   FontFamily="Verdana"
                   FontSize="18"
                   FontStyle="Italic"
                   FontWeight="Bold"
                   TextTrimming="CharacterEllipsis">
            
        </TextBlock>
        
        <TextBox Width="120" Margin="16" Text="This is a textbox" />

        <TextBox x:Name="InputText" 
                 Width="120"
                 Margin="16"
                 TextWrapping="WrapWithOverflow"
                 Text="This is an example of spell checking"/>

        <Label Content="Input" Target="InputText" Width="120" />
    </StackPanel>
</Window>

    